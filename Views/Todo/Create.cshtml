@model TodoApp.Models.TodoItem
@{
    ViewData["Title"] = "Add Task";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">Add a New Task</h2>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter task title..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Details</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your task..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary px-4">Add Task</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
